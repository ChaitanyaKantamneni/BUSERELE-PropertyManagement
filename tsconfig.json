{
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "dom"],
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler"
  },
  "include": [
    "src/**/*.ts"  // Include all TS files in the src directory
  ],
  "exclude": [
    "node_modules",
    "src/main.server.ts",
    "src/app.config.server.ts",
    "src/server.ts",
    "dist",
    "src/**/*.spec.ts"
  ]
}

